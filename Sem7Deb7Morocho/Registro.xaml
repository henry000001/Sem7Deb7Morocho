<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sem7Deb7Morocho.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Registro" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Entry x:Name="txtNombre" Placeholder="Ingrese el Nombre" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario" />

            <Entry x:Name="txtContrasena" Placeholder="Ingrese la contraseña" IsPassword="True" />
            <Button x:Name="btnRegistro" Text="registro" Clicked="btnRegistro_Clicked" BackgroundColor="#2196F3" TextColor="White"/>
            <Button x:Name="btnRegresar" Text="Regresar" Clicked="btnRegresar_Clicked" BackgroundColor="#2196F3" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>